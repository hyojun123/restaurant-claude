<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.claudetest.restaurant_app">
    
    <!-- 에뮬레이터에서 지도 표시를 위한 GPU 에뮬레이션 활성화 -->
    <uses-feature android:name="android.hardware.location" android:required="false"/>
    <uses-feature android:name="android.hardware.location.gps" android:required="false"/>
    <uses-feature android:name="android.hardware.location.network" android:required="false"/>
    
    <!-- 에뮬레이터에서 OpenGL ES 2.0 지원 -->
    <uses-feature 
        android:glEsVersion="0x00020000" 
        android:required="false" />
        
    <application android:usesCleartextTraffic="true">
        <!-- 에뮬레이터에서 네이버 지도 표시를 위한 설정 -->
        <meta-data
            android:name="com.naver.maps.map.ENABLE_MOCK_LOCATION"
            android:value="true" />
        <meta-data
            android:name="com.naver.maps.map.DEBUG_MODE"
            android:value="true" />
    </application>
</manifest>